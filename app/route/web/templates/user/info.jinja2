{% extends "base.jinja2" %}

{% block style %}
  <link rel="stylesheet/less" type="text/css" href="{{ url_for("static", filename="css/userinfo.less") }}" />
{% endblock %}

{% if user.photo_url %}
  {% set photo_url = user.photo_url %}
{% else %}
  {% set photo_url = url_for("static", filename="images/default-avatar.jpg") %}
{% endif %}

{% block main %}
<div class="col col-lg-12 col-md-12 col-sm-12 border-bottom d-flex" id="user-info">
  <div class="avatar mr-3 d-flex justify-content-center align-items-center">
    <img class="img-thumbnail rounded-circle" src="{{ photo_url }}" alt="{{ user.fullname }}'s avatar", title="{{ user.fullname }}">
  </div>
  <div class="info">
    <div class="d-flex justify-content-start align-items-center">
      <h3 class="mr-2 mb-0"><strong>{{ user.username }}</strong></h3>
      <a href="{{ url_for("user.update_personal_page") }}"><i class="fas fa-cog"></i></a>
    </div>
    <div>
      <ul class="d-flex justify-content-start list-unstyled">
        <li><strong>{{ user.n_posts }}</strong> posts</li>
        <li><strong>{{ user.n_friends }}</strong> friends</li>
        <li><strong>{{ user.n_followers }}</strong> follwers</li>
        <li><strong>{{ user.n_followings }}</strong> followings</li>
      </ul>
      <h5><strong>{{ user.fullname }}</strong></h5>
    </div>
    </div>
  </div>
</div>
<div class="col col-lg-12 col-md-12 col-sm-12" id="user-posts">
  <h3 class="text-center"><strong>Post</strong></h3>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3 col-sm-12">1</div>
      <div class="col-lg-3 col-md-3 col-sm-12">1</div>
      <div class="col-lg-3 col-md-3 col-sm-12">1</div>
      <div class="col-lg-3 col-md-3 col-sm-12">1</div>
      <div class="col-lg-3 col-md-3 col-sm-12">1</div>
      <div class="col-lg-3 col-md-3 col-sm-12">1</div>
    </div>
  </div>
</div>
{% endblock %}
