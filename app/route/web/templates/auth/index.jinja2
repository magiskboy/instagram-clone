{% extends "_base.jinja2" %}

{% block main %}
  <div class="col col-lg-8 col-md-8 col-sm-10 col-xs-12 d-flex justify-content-between">
    <div class="d-block d-xs-none flex-fill">
      <img src="{{ url_for('auth.static', filename='images/index-image.jpg') }}">
    </div>
    <div class="d-block border flex-fill">
      <div class="box p-lg-3 p-md-3">
        <h2 class="text-center mb-5">Doge Showcase</h2>
        <form method="POST" action="{{ url_for("auth.index") }}">
          {{ login_form.csrf_token }}
          <div class="form-group">
            {{ login_form.username(placeholder="Username or Email ...") }}
          </div>
          <div class="form-group">
            {{ login_form.password(placeholder="Password")  }}
          </div>
          <div class="form-check-inline">
            <label>
              {{ login_form.remember(class="form-check-input") }} {{ login_form.remember.label() }}
            </label>
          </div>
          {{ login_form.submit(class="btn btn-primary btn-block") }}
        </form>
        <hr>
        <p>Bạn không có tài khoản? <a href="{{ url_for("auth.register") }}">Đăng ký</a></p>
      </div>
    </div>
  </div>
{% endblock %}
